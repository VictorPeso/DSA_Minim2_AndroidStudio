<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@drawable/fondo"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/tvSignupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="REGISTRO"
        android:textSize="32sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#00FFFF"
        android:shadowRadius="15"
        android:shadowDx="0"
        android:shadowDy="0"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editUsuari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_neon_bg"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_neon_bg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/EditPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_neon_bg"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:drawablePadding="12dp" />

    <View
        android:id="@+id/passwordStrengthBar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="12dp"
        android:background="#AAAAAA" />

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_neon_bg"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:drawablePadding="12dp" />

    <Button
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_neon_bg"
        android:text="REGISTRARME"
        android:textColor="#FFFFFF"
        android:shadowColor="#00FFFF"
        android:shadowRadius="8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingStart="40dp"
        android:paddingEnd="40dp" />

    <Button
        android:id="@+id/btnBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_neon_bg"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:shadowColor="#00FFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:text="VOLVER"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>
